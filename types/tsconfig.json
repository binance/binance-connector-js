{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
}