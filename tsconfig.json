{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@binance/common": ["common/src"],
      "@binance/common/*": ["common/src/*"],
      "@binance/types": ["types"],
      "@binance/types/*": ["types/*"]
    },
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "stripInternal": true
  },
  "include": [
    "clients/*/src/**/*.ts",
    "common/src/**/*.ts",
    "types/**/*.ts"
  ]
}
